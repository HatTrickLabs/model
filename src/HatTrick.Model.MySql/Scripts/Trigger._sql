SELECT 
	INFORMATION_SCHEMA.TRIGGERS.TRIGGER_SCHEMA,
	INFORMATION_SCHEMA.TRIGGERS.EVENT_OBJECT_TABLE,
	INFORMATION_SCHEMA.TRIGGERS.TRIGGER_NAME,
	INFORMATION_SCHEMA.TRIGGERS.ACTION_ORDER,
	INFORMATION_SCHEMA.TRIGGERS.ACTION_TIMING,
	INFORMATION_SCHEMA.TRIGGERS.EVENT_MANIPULATION
FROM 
	INFORMATION_SCHEMA.TRIGGERS 
WHERE 
	INFORMATION_SCHEMA.TRIGGERS.TRIGGER_SCHEMA IN({Schemas})
ORDER BY
	INFORMATION_SCHEMA.TRIGGERS.TRIGGER_SCHEMA,
	INFORMATION_SCHEMA.TRIGGERS.TRIGGER_NAME;