SELECT 
	INFORMATION_SCHEMA.TABLES.TABLE_SCHEMA,
	INFORMATION_SCHEMA.TABLES.TABLE_NAME
FROM 
	INFORMATION_SCHEMA.TABLES 
WHERE 
	INFORMATION_SCHEMA.TABLES.TABLE_SCHEMA IN({Schemas}) 
	AND 
	INFORMATION_SCHEMA.TABLES.TABLE_TYPE = 'VIEW'
ORDER BY 
	INFORMATION_SCHEMA.TABLES.TABLE_SCHEMA,
	INFORMATION_SCHEMA.TABLES.TABLE_NAME;